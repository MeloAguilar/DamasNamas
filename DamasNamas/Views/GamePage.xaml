            <HorizontalStackLayout
                Spacing="250">
                <Label
                FontSize="25"
                FontFamily="Bold"
                Text="Juan"
                VerticalOptions="Center"
                HorizontalOptions="Start"/>

                <Label
                FontSize="25"
                FontFamily="Bold"
